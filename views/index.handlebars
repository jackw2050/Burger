<div class="container">
<h1>Eat-da-Burger!</h1>
<div class="row col-md-6">
<img src="http://pngimg.com/upload/burger_sandwich_PNG4145.png" alt="Burger View" style="width:200px;height:150px; ">
</div>
</div>
<div class="panel-body">
    <form class="create-update-form" action="cats/create" method="POST">
      <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
      </div>
      
      <br>
      <input type="submit" class="btn btn-primary devourButton" value="Send">
    </form>
  </div>



<div class="freshBurger">
	<ul>
  {{#each burger}}
    {{#unless this.devoured}}
      <div>
        {{this.burger_name}}

        <form action="/update/{{this.id}}?_method=POST" method="POST">
          <input id="fresh" type="hidden" name="fresh" value="true">
          <button class='devourButton' type="submit">Devour it!</button>
        </form>

     <div>
    {{/unless}}
  {{/each}}
</ul>
</div>



<div class="burgerEaten">
	


<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/update/{{this.id}}?_method=POST" method="POST">
          <input type="hidden" name="sleepy" value="false">

        </form>

       
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>